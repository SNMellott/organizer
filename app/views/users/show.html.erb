<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.tasks.any? %>
      <h3>Tasks (<%= @user.tasks.count %>)</h3>
      <ol class="tasks">
        <% @tasks.each do |task| %>
          <%= render partial: 'tasks/task', locals: {task: task} %>
        <% end %>
      </ol>
      <%= will_paginate @tasks %>
    <% end %>
  </div>
</div>
